{
  "name": "@occirank/haloscan-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Haloscan SEO API",
  "license": "MIT",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-haloscan-server": "./build/cli.js"
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.json && (chmod 755 build/cli.js || true)",
    "start": "node build/index.js",
    "http": "node build/http-server.js",
    "dev": "npx ts-node --esm src/index.ts",
    "dev:http": "npx ts-node --esm src/http-server.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
